@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
<link href="~/lib/bootstrap/dist/Template/css/bootstrap.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/font-awesome.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/templatemo-style.css" rel="stylesheet">
<body class="services-page" style="background: black;">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row" style="margin: 45px 160px 50px; align-items: center;">
        <h4 style="color: white; text-transform: uppercase;">@ViewData["Title"]</h4>
        <div class="col-md-8">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword" class="text-white" style="font-size: 18px;"></label>
                    <input asp-for="Input.OldPassword" class="form-control" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword" class="text-white" style="font-size: 18px;"></label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="text-white" style="font-size: 18px;"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="button" class="btn btn-danger" style="height: 45px; font-size: 18px;">Update password</button>
            </form>
        </div>
    </div>
    </body>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
