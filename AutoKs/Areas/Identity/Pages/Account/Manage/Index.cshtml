@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
<link href="~/lib/bootstrap/dist/Template/css/bootstrap.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/font-awesome.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/templatemo-style.css" rel="stylesheet">

    <body class="services-page" style="background: black;">
        
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <div class="row" style="margin: 45px 160px 50px;">
            <h4 style="color: white; text-transform: uppercase;">@ViewData["Title"]</h4>
            <div class="col-md-8">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="text-white" style="font-size: 18px;">Email</label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="text-white" style="font-size: 18px;"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="button" class="btn btn-danger" style="height: 45px; font-size: 18px;">Save</button>
                </form>
            </div>
        </div>

    </body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
