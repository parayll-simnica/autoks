@using AutoKs.Models;
@inject SignInManager<AutoKsUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous">

</script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
<link href="~/lib/bootstrap/dist/Template/css/bootstrap.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/font-awesome.min.css" rel="stylesheet">
<link href="~/lib/bootstrap/dist/Template/css/templatemo-style.css" rel="stylesheet">
<ul class="nav nav-pills flex-column" style="margin: 30px 90px 50px 0;">
    <li class="nav-item"><a class="about-link @ManageNavPages.IndexNavClass(ViewContext)" style="border: 0px;margin-bottom: 10px;text-transform: capitalize; font-size: 18px;" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="about-link @ManageNavPages.EmailNavClass(ViewContext)"  style="border: 0px;margin-bottom: 10px;text-transform: capitalize; font-size: 18px;" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="about-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" style="border: 0px;margin-bottom: 10px;text-transform: capitalize; font-size: 18px;" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item"><a class="about-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" style="border: 0px;text-transform: capitalize;margin-bottom: 10px; font-size: 18px;" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="about-link @ManageNavPages.PersonalDataNavClass(ViewContext)" style="border: 0px; text-transform:capitalize; margin-bottom: 10px; font-size:18px;" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>
